@model RegistrationApp.Models.ImageViewModel
@{
    ViewData["Title"] = "Min Page";
}
<style>
    body {
        margin: 0;
        background-color: #f4f3f1;
        margin: 0;
        padding: 0;
        font-family: "Inter";
    }

    .minside-container {
        max-width: 800px;
        width: 100%;
        padding: 0 4rem;
        height: 900px;
        background-color: #f4f3f1;
    }

        .minside-container .minsidep {
            font-family: "Inter";
            font-weight: bold;
            font-weight: 400;
            font-size: 0.9rem;
        }

        .minside-container form {
            transition: transform 0.6s ease-in-out;
        }

        .minside-container.register-form {
            transform: translateX(400px);
        }

        .minside-container.minsidebox {
            transform: translateX(0);
        }

        .minside-container.register-form .minsidebox {
            transform: translateX(-400px);
        }

    .boxcontainer .box {
        display: flex;
        width: 800px;
        height: 900px;
        background-color: #f4f3f1;;
    }

        .boxcontainer .box .grpahimg {
            width: 50%;
            padding: 1rem;
            height: 100%;
            background-color: #c7b9a5;
        }

    .minsidetop {
        height: 250px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0rem 0;
        /* text-align: center; */
    }

        .minsidetop .profileee {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

            .minsidetop .profileee img {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                border: 3px solid #c7b9a5;
                border-radius: 50%;
            }

            .minsidetop .profileee button {
                background-color: #c7b9a5;
                border: none;
                outline: none;
                color: #ffffff;
                border-radius: 20px;
                margin-top: 0.5rem;
                padding: 0.3rem 1.8rem;
                cursor: pointer;
            }

                .minsidetop .profileee button:hover {
                    background-color: #ccb99d;
                    transform: scale(1.1);
                }

    ul {
        list-style: none;
        padding: 1rem;
    }

        ul li {
            padding: 0.3rem 0;
        }

            ul li::before {
                content: "\2022";
                color: red;
                font-weight: 900;
                display: inline-block;
                width: 0.5em;
                margin-left: -1em;
            }

    .progress {
        display: flex;
        justify-content: space-around;
        align-items: flex-start;
    }

        .progress img {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0.3rem 0;
            width: 13px !important;
            height: 13px !important;
        }

        .progress span {
            font-size: 0.7rem;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="login.css" />
    <link rel="stylesheet" href="Minside.css" />
    <title>Min Side</title>
</head>
<body>
    <div class="minside-container">
        <div class="minsidebox">
            <div class="minsidetop">
                <div>
                    <h3>Min side</h3>
                    <p class="minsidep">Velkommen, [@ViewBag.LoginView]!</p>
                </div>
                <div class="profileee">
                    <img id="blah" src="#" alt="" height="85" width="85" />
                    @*<button>Endre</button>*@
                    <input accept="image/*" type='file' id="imgInp" name="Endre" />
                </div>
            </div>
            <div class="boxcontainer">
                <h4>Rewards</h4>
                <!-- <div class="box"></div> -->
                <img src="/Image/image.jpeg" alt="" width="100" height="100">
            </div>
        </div>
    </div>
</body>
</html>
<script>
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            blah.src = URL.createObjectURL(file)
        }
    }
</script>